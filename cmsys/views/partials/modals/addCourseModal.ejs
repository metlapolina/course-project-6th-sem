<div id="addModal" class="modal fade mt-5" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Course</h5>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            </div>
            <form id="addCourse" method="post" action="/courses">
                <div class="modal-body ml-3 pb-3">
                    <div class="form-group col-12 row">
                        <label for="title" class="col-form-label col-3">Title:</label>
                        <input type="text" class="form-control col-8" id="addTitle" placeholder="Title" required>
                    </div>
                    <div class="form-group col-12 row">
                        <label for="type" class="col-form-label col-3">Type:</label>
                        <select class="form-control col-8" id="addType">
                            <option selected label="Lectures" value="Lectures"></option>
                            <option label="Practice" value="Practice"></option>
                        </select>
                    </div>
                    <div class="form-group col-12 row">
                        <label for="group" class="col-form-label col-3">Group:</label>
                        <select class="form-control col-8" id="addGroup"></select>
                    </div>
                    <div class="form-group col-12 row">
                        <label for="trainer" class="col-form-label col-3">Trainer:</label>
                        <select class="form-control col-8" id="addTrainer"></select>
                    </div>
                    <div class="form-group col-12 row">
                        <label for="info" class="col-form-label col-3">Info:</label>
                        <textarea class="form-control col-8" style="height: 100px;" id="addInfo" placeholder="Enter info..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>